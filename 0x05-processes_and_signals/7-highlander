#!/usr/bin/env bash
# This script sends a SIGTERM signal to the 7-highlander process.

# Find the PID of the 7-highlander script
# Using 'pgrep -f' is crucial to match the full command line.
PID=$(pgrep -f "7-highlander")

# Check if the process was found
if [ -z "$PID" ]; then
    echo "7-highlander process not found. Make sure it's running."
else
    # Send SIGTERM to the process (default for kill)
    kill "$PID"
    echo "SIGTERM sent to 7-highlander (PID: $PID)"
fi
